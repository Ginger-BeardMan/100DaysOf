def turn_right():
    turn_left()
    turn_left()
    turn_left()

def turn_around():
    turn_left()
    turn_left()

while not at_goal():
    if wall_on_right() == True and front_is_clear() == True:
        move()
    elif not wall_on_right() and not front_is_clear():
        turn_right()
        move()
    elif not wall_on_right() and front_is_clear() == True:
        turn_right()
        move()
    elif wall_on_right() == True and not front_is_clear():
        turn_around()

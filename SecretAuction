from replit import clear
from art import logo

print(logo)

print("Welcome to the secret auction program.")

# Dictionary to store all key: value pairs
bidders = []

# Create a function to run program
def get_bids(bid_name, bid_value):
    bidder = {}
    bidder['Name'] = bid_name
    bidder['Value'] = bid_value
    bidders.append(bidder)
    print(bidders)

bidding = True
highest_bid = 0
high_bid_index = -1

while bidding:

    # Person is the key
    bid_name = input('What is your name?: ')

    # Bid is the value
    bid_value = input('What is your bid?: $')
  
    get_bids(bid_name, bid_value)

    for bid in bidders:
        if int(bid['Value']) > highest_bid:
            highest_bid = int(bid['Value'])
            high_bid_index += 1
    print(highest_bid)
    print(high_bid_index)
    print(bidders[high_bid_index]["Name"])
    print(bidders[high_bid_index]["Value"])
        
    # Will bidding continue?
    another_bid = input("Are there any other bidders? Type 'yes' or 'no'. ").lower()
    
    if another_bid == 'no':
        print(f"The winner is {bidders[high_bid_index]["Name"]} with a bid of {bidders[high_bid_index]["Value"]}.")
        bidding = False
        
    
    clear()
